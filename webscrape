import requests
from bs4 import BeautifulSoup
import time

while True:
  # Make a request to the website
  response = requests.get('https://mcm.amazon.com/reporting/approver_dashboard')

  # Parse the HTML response
  soup = BeautifulSoup(response.text, 'html.parser')

  # Extract the field you want to scrape
  field = soup.find('p')

  # Print the field
  print(field)

  # Wait for 4 hours
  time.sleep(4*60*60)
